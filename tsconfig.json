{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "react",
      "node"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/layout.tsx",
    "app/page.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts", "app/**/*.tsx", "components/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*._off.ts",
    "**/*._off.tsx"
  ]
}
